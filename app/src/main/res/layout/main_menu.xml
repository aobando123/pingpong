        <androidx.constraintlayout.widget.Guideline android:id="@+id/center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" app:layout_constraintGuide_percent="0.90" />

        <androidx.constraintlayout.widget.Guideline android:id="@+id/bottom10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" app:layout_constraintGuide_percent="0.50" />
    </androidx.constraintlayout.widget.ConstraintLayout>
